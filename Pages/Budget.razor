@page "/budget"
@*@page "/budget/{id:int}"*@
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
<h3>Budget</h3>
<div class="container">
    @*<div>@Id - test</div>*@
@if (BudgetModel == null)
{
    <div class="d-flex justify-content-center">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
}
else
{
    if (BudgetModel.IsInUse)
    {
        <BudgetComponent @ref="BudgetComponent" BudgetModel="@BudgetModel" TransactionCategories="@TransactionCategories" ></BudgetComponent>
    }
    else
    {
        <div class="alert-info">Please create a budget and set it "In use"</div>
    }
}
</div>