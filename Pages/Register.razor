@layout MoneySaver.SPA.Shared.EmptyLayout
@page "/register"
<div class="col-md-4 mx-auto">
    <h3>Registration</h3>
    @if (ShowAuthError)
    {
        <div class="alert alert-danger" role="alert">
            <p>@Error</p>
        </div>
    }

    @if (ShowSuccess)
    {
        <div>@SuccessfullMessage</div>
        <div><button @onclick="GotoLogin" class="btn btn-success">Go to Login page</button></div>
    }
    else
    {
        <EditForm Model="_userForRegistration" OnValidSubmit="ExecuteRegister" class="card card-body bg-light mt-5">
            <DataAnnotationsValidator />
            <div class="form-group row">
                <label for="email" class="col-md-4 col-form-label">Email:</label>
                <div class="col-md-8">
                    <ValidationMessage For="@(() => _userForRegistration.Email)" />
                    <InputText id="email" class="form-control" @bind-Value="_userForRegistration.Email" />
                </div>
            </div>
            <div class="form-group row">
                <label for="password" class="col-md-4 col-form-label">Password:</label>
                <div class="col-md-8">
                    <ValidationMessage For="@(() => _userForRegistration.Password)" />
                    <InputText type="password" id="password" class="form-control" @bind-Value="_userForRegistration.Password" />
                </div>
            </div>
                <div class="form-group row">
                    <label for="confirmPassword" class="col-md-4 col-form-label">Confirm password:</label>
                    <div class="col-md-8">
                        <ValidationMessage For="@(() => _userForRegistration.ConfirmPassword)" />
                        <InputText type="password" id="confirmpassword" class="form-control" @bind-Value="_userForRegistration.ConfirmPassword" />
                    </div>
                </div>
            <div class="row">
                <div class="col-md-12 text-right">
                    <button type="submit" class="btn btn-success">Register</button>
                </div>
            </div>
        </EditForm>
    }
</div>